<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/num_input"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:gravity="bottom"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textAlignment="viewEnd"
        tools:ignore="RtlCompat"
        android:padding="10sp"/>

    <TextView
        android:id="@+id/num_output"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:gravity="bottom"
        android:maxLines="1"
        android:text=""
        android:textColor="#C1C1C1"
        android:textSize="30sp"
        android:textAlignment="viewEnd"
        tools:ignore="RtlCompat"
        android:paddingBottom="40sp"
        android:paddingRight="10sp"/>

    <ImageButton
        android:id="@+id/num_backspace"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_gravity="end"
        android:background="@null"
        android:src="@drawable/ic_backspace_foreground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/num_c"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/num_add_subtract"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="+/-"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/num_modulus"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/num_divide"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="รท"
                android:textColor="@color/white"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/num_7"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/num_8"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/num_9"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/num_multiply"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/num_4"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/num_5"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/num_6"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/num_subtract"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/num_1"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/num_2"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/num_3"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/num_add"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/num_0"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="#40696969"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/num_period"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="."
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/num_equals"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="#40696969"
                android:gravity="center"
                android:text="="
                android:textColor="@color/white"
                android:textSize="28sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>